extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1= `${project.project_name}`

        p= `${project.description}`

      .project-tech-links-box.box
        h6 Technologies
        ul

        each technology in project.technologies
          li.tech-list= technology

        a.btn-link(href=`${project.live_link}` target= 'blank_') Live Demo
        a.btn-link(href=`${project.github_link}` target= 'blank_') GitHub Repo

    .project-img-box.box

      img.project-img(src=`/static${project.image_urls[1]}`, alt=`/static${project.image_alts[1]}`)
      img.project-img(src=`/static${project.image_urls[2]}`, alt=`/static${project.image_alts[2]}`)
      img.project-img(src=`/static${project.image_urls[3]}`, alt=`/static${project.image_alts[3]}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
